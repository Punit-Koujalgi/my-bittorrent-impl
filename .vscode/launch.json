	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug torrent app",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/bittorrent",
			"args": ["peers", "/home/punit/Desktop/MyProjects/my-bit-torrent/sample.torrent"],
			"stopAtEntry": false,
			"environment": [],
			"cwd": "${workspaceFolder}",
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text":"-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "C/C++: g++ build torrent app",
			"miDebuggerPath": "/usr/bin/gdb"
		}
	]
}